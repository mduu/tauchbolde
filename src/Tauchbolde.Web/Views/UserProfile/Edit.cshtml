@model Tauchbolde.InterfaceAdapters.MVC.Presenters.Profile.GetEditUserProfile.MvcEditUserProfileViewModel
@{
    ViewBag.Title = $"Profil von {Model.Fullname} bearbeiten";
    Layout = "_Layout";
}
<h3>
    <small>Benutzerprofil bearbeiten</small><br />
    @Model.Fullname
</h3>

<form asp-action="Edit" role="form" class="form-horizontal">
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Username" />
    
    <div class="col-xs-12">
        @Html.ValidationSummary()
    </div>
    
    <div class="col-md-6">
        <fieldset>
            <legend>Informationen</legend>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="Fullname"></label>
                <div class="col-sm-8">
                    <input asp-for="Fullname" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="Firstname"></label>
                <div class="col-sm-8">
                    <input asp-for="Firstname" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="Lastname"></label>
                <div class="col-sm-8">
                    <input asp-for="Lastname" class="form-control" required />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="Slogan"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Slogan" class="form-control" rows="2"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="Education"></label>
                <div class="col-sm-8">
                    <input asp-for="Education" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="Experience"></label>
                <div class="col-sm-8">
                    <input asp-for="Experience" class="form-control" />
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset>
            <legend>Komunikation</legend>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="MobilePhone"></label>
                <div class="col-sm-8">
                    <input asp-for="MobilePhone" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="WebsiteUrl"></label>
                <div class="col-sm-8">
                    <input asp-for="WebsiteUrl" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="TwitterHandle"></label>
                <div class="col-sm-8">
                    <input asp-for="TwitterHandle" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="FacebookId"></label>
                <div class="col-sm-8">
                    <input asp-for="FacebookId" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" asp-for="SkypeId"></label>
                <div class="col-sm-8">
                    <input asp-for="SkypeId" class="form-control" />
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Speichern</button>
    </div>
</form>

<div class="clearfix"></div>