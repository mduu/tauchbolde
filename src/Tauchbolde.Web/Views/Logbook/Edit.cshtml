@model Tauchbolde.InterfaceAdapters.MVC.Presenters.Logbook.Edit.LogbookEditViewModel

@{
    ViewBag.Title = Model.Id.HasValue ? "Logbucheintrag bearbeiten" : "Neuer Logbucheintrag erfassen";
    Layout = "_Layout";
}

<script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
<link rel="stylesheet" href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" asp-append-version="false" />

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" role="form" class="form-horizontal" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="container">
        
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="Id" hidden="hidden" />
        
        <div class="form-group">
            <label asp-for="Title" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                <span asp-validation-for="Title"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="TeaserImage" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <input type="file" name="TeaserImage" id="TeaserImage" />
                <span asp-validation-for="TeaserImage"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Teaser" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Teaser, new { @class = "form-control" })
                <span asp-validation-for="Teaser"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Text" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Text, 8, 50, new { @class = "form-control" })
                <span asp-validation-for="Text" class="text-danger"></span>
                <vc:markdown-help-link />
            </div>
        </div>
        
                
        <div class="form-group">
            <label asp-for="ExternalPhotoAlbumUrl" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ExternalPhotoAlbumUrl, new { @class = "form-control" })
                <span asp-validation-for="ExternalPhotoAlbumUrl"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CreatedAt" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.CreatedAt, new { @class = "form-control", autocomplete = "off" })
                <span asp-validation-for="CreatedAt"></span>
            </div>
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Speichern" />
        </div>

    </div>
</form>

<script>
    $(function() {
        $('#CreatedAt').datetimepicker({
            format: 'DD.MM.YYYY HH:mm',
            locale: 'de-CH'
        });
    });
</script>