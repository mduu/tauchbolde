@using Microsoft.AspNetCore.Identity
@using Tauchbolde.Common.Model
@using Tauchbolde.Web.ViewComponents
@using Tauchbolde.Web.Models.ViewComponentModels
@model ParticipantViewModel
@{
    var statusLabelClass = "";
    var statusIconName = "";

    switch (Model.Status)
    {
        case ParticipantStatus.Accepted:
            statusLabelClass = "label-success";
            statusIconName = "glyphicon-thumbs-up";
            break;
        case ParticipantStatus.Declined:
            statusLabelClass = "label-danger";
            statusIconName = "glyphicon-thumbs-down";
            break;
        case ParticipantStatus.Tentative:
            statusLabelClass = "label-default";
            statusIconName = "glyphicon-question-sign";
            break;
    }
}

<span style="margin-left: 18px"></span>

<span class="label @statusLabelClass">
    <span class="glyphicon @statusIconName" aria-hidden="true"></span>
</span>
<vc:avatar diver="Model.Diver" avatar-size="Small" />
<span class="event-participationlist-name" style="padding-left: 5px;">
    <strong>@Model.Name</strong>
</span>
<span class="badge" title="Anzahl Personen: @Model.CountPeople">
    @Model.CountPeople
</span>
@if (!string.IsNullOrWhiteSpace(Model.Notes))
{
    <mark style="margin-left: 10px;">@Model.Notes</mark>
}