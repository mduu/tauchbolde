@using Tauchbolde.Web.Models.ViewComponentModels
@model RecentAndUpcomingEventsViewModel
@{
    var upcomingEvents = Model.RecentEvents.Where(e => e.StartTime > DateTime.Now).ToList();
    var recentEvents = Model.RecentEvents.Where(e => e.StartTime < DateTime.Now).ToList();
}
<section>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Bevorstehend</div>
        @if (!upcomingEvents.Any())
        {
            <div class="panel-footer">Nichts geplant</div>
        }
        else
        {
            <!-- Table -->
            <table class="table">
                <tr>
                    <th>Wann</th>
                    <th>Was</th>
                </tr>
                <tbody></tbody>
                @foreach (var e in upcomingEvents)
                {
                    <tr>
                        <td><a class="text-info" asp-action="Details" asp-controller="Event" asp-route-id="@e.Id">@e.StartEndTimeAsString </a></td>
                        <td><a class="text-info" asp-action="Details" asp-controller="Event" asp-route-id="@e.Id"><strong>@e.Name</strong></a></td>
                    </tr>
                }
            </table>
        }
    </div>
</section>
<section>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Vergangene</div>
        @if (!recentEvents.Any())
        {
            <div class="panel-footer">Nichts</div>
        }
        else
        {
            <!-- Table -->
            <table class="table">
                <tr>
                    <th>Wann</th>
                    <th>Was</th>
                </tr>
                <tbody></tbody>
                @foreach (var e in recentEvents)
                {
                    <tr>
                        <td><a class="text-info" asp-action="Details" asp-controller="Event" asp-route-id="@e.Id">@e.StartEndTimeAsString </a></td>
                        <td><a class="text-info" asp-action="Details" asp-controller="Event" asp-route-id="@e.Id"><strong>@e.Name</strong></a></td>
                    </tr>
                }
            </table>
        }
    </div>
</section>
