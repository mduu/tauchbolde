<form class="form-horizontal">
    <div class="form-group">
        <label for="MODo2Percent" class="col-sm-2 control-label">O2-Gehalt</label>
        <div class="col-sm-2">
            <div class="input-group">
                <div class="input-group-addon">%</div>
                <input type="number" class="form-control" id="MODo2Percent" value="32" min="21" max="100" step="1" placeholder="O2 Gehalt in %" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="MODppo2" class="col-sm-2 control-label">Partialdruck O2:</label>
        <div class="col-sm-2">
            <input type="number" class="form-control" id="MODppo2" value="1.4" min="0.8" max="1.6" step="0.1">
        </div>
    </div>

    <div class="form-group">
        <span class="col-sm-2"></span>
        <div class="col-sm-2">
            <button class="btn btn-primary" type="button" id="MODcalc">Berechnen</button>
        </div>
    </div>

    <div class="form-group">
        <label for="MODresult" class="col-sm-2 control-label">MOD</label>
        <div class="col-sm-2">
            <div class="input-group">
                <div class="input-group-addon">Meter</div>
                <input type="text" class="form-control" id="MODresult" readonly="readonly" />
            </div>
        </div>
    </div>
</form>

<script>
    $(function () {
        $("#MODcalc").click(function (e) {
            e.preventDefault();

            var o2 = $("#MODo2Percent").val();
            var ppo2 = $("#MODppo2").val();

            if (!isNaN(o2) && !isNaN(ppo2)) {
                $("#MODresult").val((ppo2 / (o2 / 100) * 10 - 10).toFixed(1).toString());
            }
        });
    });
</script>